<UserControl x:Class="CrawlerCraneVisual.CutsomElements.CraneConfigurationItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CrawlerCraneVisual.CutsomElements"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="240" VerticalAlignment="Top" HorizontalAlignment="Stretch">
    <Grid VerticalAlignment="Top" Height="30" HorizontalAlignment="Stretch" Background="#FFE4E4E4">
        <Label x:Name="ConfigName_label" Margin="0,0,60,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" FontSize="14"/>
        <Button x:Name="DeleteButton" HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="28" Content="X" FontSize="16" Margin="0,1,1,1" Click="DeleteButton_Click"/>
        <Button x:Name="EditButton" HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="28" Content="E" FontSize="16" Margin="0,1,30,1" Click="EditButton_Click"/>
    </Grid>
</UserControl>
